<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.example.bao.widget.LimitView
        android:id="@+id/room_limit"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:has_listener="false"
        app:least="0"
        app:most="8"
        app:num="0"
        app:type_name="@string/limit_room_unit" />

    <com.example.bao.widget.LimitView
        android:id="@+id/adult_limit"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:has_listener="false"
        app:least="0"
        app:most="3"
        app:num="0"
        app:type_name="@string/limit_adult_number" />

    <com.example.bao.widget.LimitView
        android:id="@+id/child_limit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:has_listener="true"
        app:least="0"
        app:most="8"
        app:num="0"
        app:type_name="@string/limit_child_number" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:visibility="gone"
        android:id="@+id/child_layout1"

        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="小童1" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorAccent"
            app:layout_constraintBottom_toBottomOf="parent" />
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:visibility="gone"
        android:id="@+id/child_layout2"

        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="小童2" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorAccent"
            app:layout_constraintBottom_toBottomOf="parent" />
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:visibility="gone"
android:id="@+id/child_layout3"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="小童3" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorAccent"
            app:layout_constraintBottom_toBottomOf="parent" />
    </android.support.constraint.ConstraintLayout>
</LinearLayout>